@model Wing_Fleet_Manager.ViewModel.DashBoardViewModel
<div class="container-fluid">
    <div class="row m-5 justify-content-center align-items-center text-center">
        <h1>Wing Fleet Manager</h1>
    </div>
    <div class="row g-3">
        <div class="col-12 col-lg-3">
            <div class="bg-primary text-white d-flex justify-content-between align-items-center p-2" style="border-radius:15px; height:130px">
                <div class="p-3">
                    <i class="fa-solid fa-motorcycle fa-3x p-2"></i>
                </div>
                <div class="d-flex flex-column px-3 text-end">
                    <span>Total Vehicles</span>
                    <h2>@Model.TotalVehicles</h2>
                    <small>All Fleet</small>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-3">
            <div class="bg-success text-white d-flex justify-content-between align-items-center p-2" style="border-radius:15px; height:130px">
                <div class="p-3">
                    <i class="fa-solid fa-users fa-3x p-2"></i>
                </div>
                <div class="d-flex flex-column px-3 text-end">
                    <span>Total Users</span>
                    <h2>@Model.TotalUsers</h2>
                    <small>All Users</small>
                </div>
            </div>
            
        </div>

        <div class="col-12 col-lg-3">
            <div class=" text-white d-flex justify-content-between align-items-center p-2" style="border-radius:15px; height:130px; background-color:#fd7e14">
                <div class="p-3">
                    <i class="fa-solid fa-map-location-dot fa-3x p-2"></i>
                </div>
                <div class="d-flex flex-column px-3 text-end">
                    <span>Total Zones</span>
                    <h2>@Model.TotalZones</h2>
                    <small>All Fleet</small>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-3">
            <div class="text-white d-flex justify-content-between align-items-center p-2" style="border-radius:15px; height:130px; background-color:#6f42c1;">
                <div class="p-3">
                    <i class="fa-solid fa-screwdriver-wrench fa-3x p-2"></i>
                </div>
                <div class="d-flex flex-column px-3 text-end">
                    <span>Total Faults</span>
                    <h2>@Model.TotalFaults</h2>
                    <small>All Fleet</small>
                </div>
            </div>
            
        </div>
    </div>
</div>
